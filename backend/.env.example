PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ML Model Endpoints (to be configured later)
ML_IMAGE_PROCESSING_URL=
ML_DEGRADATION_MODEL_URL=
ML_EFFICIENCY_MODEL_URL=

# ============================================
# EMAIL ALERT CONFIGURATION (NodeMailer)
# ============================================

# SMTP Server Settings
# For Gmail: smtp.gmail.com (port 587)
# For Outlook: smtp.office365.com (port 587)
# For Yahoo: smtp.mail.yahoo.com (port 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Email Credentials
# For Gmail: Use an App Password (not your regular password)
# Go to: Google Account > Security > 2-Step Verification > App passwords
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Default recipients for defect alerts (comma-separated)
ALERT_RECIPIENTS=admin@example.com,maintenance@example.com
